<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_begintime"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/green_background"
    android:orientation="vertical" 
    android:gravity="center_horizontal"
    android:padding="15dp"
    android:paddingBottom="10dp">
    <TextView 
        android:id="@+id/pop_begintime_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="设置提醒时间:"
        android:textSize="24sp"/>
    <TextView 
        android:id="@+id/pop_begintime_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="(打开'no拖功能'后,此时间为开始时间)"
        android:textSize="15sp"/>
    <DatePicker
        android:id="@+id/pop_begintime_date"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:startYear="2015"
        android:endYear="2030"
        android:calendarViewShown="true"
		android:spinnersShown="true"
        android:layout_marginTop="5dp"/>
    <TimePicker 
        android:id="@+id/pop_begintime_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        />
    <Button 
        android:id="@+id/pop_begintime_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定"
        android:background="#50ffffff"
        android:textSize="20sp"/>
</LinearLayout>
