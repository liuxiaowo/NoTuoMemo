<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.example.notuonodie.MainActivity"
  android:background="@drawable/lock_background"> 
  <LinearLayout
    android:id="@+id/clock"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:gravity="center|center_horizontal|center_vertical">
  <AnalogClock         
   						android:layout_width="fill_parent"        
   						android:layout_height="150dp"
   						android:layout_marginTop="5dp"
                        />    
</LinearLayout>
  			<RelativeLayout 
  			    android:id="@+id/lock_display"
  			    android:layout_width="match_parent"
  			    android:layout_height="match_parent"
  			    android:background="@drawable/lock_display"
  			    android:layout_below="@+id/clock"
  			    android:layout_above="@+id/phone"
  			    android:layout_marginLeft="27dp"
  			    android:layout_marginRight="27dp"
  			    android:layout_marginBottom="20dp">
   			<LinearLayout
    			android:orientation="horizontal"
    			android:layout_width="match_parent"
    			android:layout_height="wrap_content"
    			android:layout_marginTop="5dp">
   				 <TextView        
   						android:id="@+id/task_name" 
   						android:layout_width="wrap_content"
   						android:layout_height="wrap_content"
   					    android:layout_weight="3"
   						android:layout_marginLeft="7dp"
   						android:textColor="@android:color/black"
   						android:textSize="20sp"
   						android:text="Task："/>
   				 <com.example.service.CustomDigitalClock        
   						android:id="@+id/time" 
   						android:layout_width="wrap_content"
   						android:layout_height="wrap_content"
   						android:layout_weight="1"
   						android:textSize="20sp"
   						android:text="Time："/>
   				 </LinearLayout>
   				  <TextView        
   						android:id="@+id/task_content" 
   						android:layout_width="wrap_content"
   						android:layout_height="wrap_content"
   						android:layout_marginTop="25dp"
   						android:layout_marginLeft="5dp"
   						android:textColor="@android:color/black"
   						android:textSize="20sp"
   						android:text="Content："/>
  			</RelativeLayout>
  			<ImageView
  			    android:id="@+id/noTuo"    
                android:layout_width="wrap_content"    
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/lock_display"
                android:layout_alignRight="@id/lock_display"
                android:background="@drawable/lock_logo" 
                android:layout_marginTop="-40dp"
                android:layout_marginRight="-30dp"   
  			    />
  			<ImageButton    
                        android:id="@+id/phone"    
                        android:layout_width="wrap_content"    
                        android:layout_height="wrap_content"     
                        android:src="@drawable/phone"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="50dp"
                        android:layout_alignParentLeft="true"
                        android:padding="2dp"
                        android:background="@drawable/button_selector"/>
            <ImageButton    
                        android:id="@+id/quit"    
                        android:layout_width="wrap_content"    
                        android:layout_height="wrap_content"     
                        android:src="@drawable/quit"
                        android:layout_marginBottom="22dp"
                        android:layout_marginRight="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:padding="2dp"
                        android:background="@drawable/button_selector"/>
  
</RelativeLayout>
