<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    android:background="#70ffffff" >
    
    <!--是否设置提醒 -->
	<RelativeLayout
		android:id="@+id/alarm_remind"
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:padding="5dp"
	    android:layout_weight="1">
	    <LinearLayout 
	        android:id="@+id/start_time"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:orientation="vertical">
	        <TextView 
	    		android:id="@+id/alarm_remind_text"
	    		android:layout_height="wrap_content"
	    		android:layout_width="wrap_content"
	    		android:text="任务提醒"
	    		android:textSize="20sp"
        		android:textColor="#6a6a6a"/>
	        <TextView 
	    		android:id="@+id/alarm_remind_time"
	    		android:layout_height="wrap_content"
	    		android:layout_width="wrap_content"
	    		android:layout_marginTop="5dp"
	    		android:text="设置提醒（开始）时间"
	    		android:textSize="18sp"
        		android:textColor="#6a6a6a"/>
	    </LinearLayout>"
	           
	   <ImageButton
  	      android:id="@+id/alarm_remind_switch"
  	      android:layout_width="wrap_content"
  	      android:layout_height="wrap_content"
  	      android:layout_alignParentRight="true"
  	      android:background="@drawable/alarm_close"
  	      android:layout_centerVertical="true"
  	      android:visibility="visible" />

	</RelativeLayout>

	  <View
	     android:id="@+id/alarm_line1"
 		 android:layout_width="fill_parent"
		 android:layout_height="2dp"
		 android:background="#6a6a6a"
		 android:layout_marginTop="5dp"
		 android:layout_below="@id/alarm_remind"/>
	  
   <!--no拖功能 -->
	<RelativeLayout
		android:id="@+id/alarm_notuo"
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:padding="5dp"
	    android:layout_weight="1">
	  <LinearLayout 
	        android:id="@+id/stop_time"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:orientation="vertical">
	      <TextView 
	    		android:id="@+id/alarm_notuo_text"
	    		android:layout_height="wrap_content"
	    		android:layout_width="wrap_content"
	    		android:text="no拖锁屏"
	    		android:textSize="20sp"
        		android:textColor="#6a6a6a"/>
	   	  <TextView 
	    		android:id="@+id/alarm_notuo_time"
	    		android:layout_height="wrap_content"
	    		android:layout_width="wrap_content"
	    		android:layout_marginTop="5dp"
	    		android:text="设置结束时间"
	    		android:textSize="18sp"
        		android:textColor="#6a6a6a"/>
	  </LinearLayout>
	   
	   <ImageButton
  	      android:id="@+id/alarm_notuo_switch"
  	      android:layout_width="wrap_content"
  	      android:layout_height="wrap_content"
  	      android:layout_alignParentRight="true"
  	      android:background="@drawable/alarm_close"
  	      android:layout_centerVertical="true"
  	      android:visibility="visible" />
	
	  	</RelativeLayout>
	  	
	  <View
	     android:id="@+id/alarm_line2"
 		 android:layout_width="fill_parent"
		 android:layout_height="2dp"
		 android:background="#6a6a6a"
		 android:layout_marginTop="5dp"/>
	  
	  <!--震动 -->
	<RelativeLayout
		android:id="@+id/alarm_shark"
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:padding="5dp"
	    android:layout_weight="1">
	    
	   <TextView 
	    android:id="@+id/alarm_shark_text"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_centerVertical="true"
	    android:text="震动"
	    android:textSize="20sp"
        android:textColor="#6a6a6a"/>
	   <ImageButton
  	      android:id="@+id/alarm_shark_switch"
  	      android:layout_width="wrap_content"
  	      android:layout_height="wrap_content"
  	      android:layout_alignParentRight="true"
  	      android:background="@drawable/alarm_close"
  	      android:layout_centerVertical="true"
  	      android:visibility="visible" />
	  
	</RelativeLayout>
	
	
	<View
	     android:id="@+id/alarm_line3"
 		 android:layout_width="fill_parent"
		 android:layout_height="2dp"
		 android:background="#6a6a6a"
		 android:layout_marginTop="5dp"/>
	
	<!--在静音下响起 -->
	<RelativeLayout
		android:id="@+id/alarm_cilent"
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:padding="5dp"
	    android:layout_weight="1">
	   <TextView 
	    android:id="@+id/alarm_cilent_text"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_centerVertical="true"
	    android:text="在静音下响起"
	    android:textSize="20sp"
        android:textColor="#6a6a6a"/>
	   <ImageButton
  	      android:id="@+id/alarm_cilent_switch"
  	      android:layout_width="wrap_content"
  	      android:layout_height="wrap_content"
  	      android:layout_alignParentRight="true"
  	      android:background="@drawable/alarm_close"
  	      android:layout_centerVertical="true"
  	      android:visibility="visible" />
	
	</RelativeLayout>
	
	  <View
	     android:id="@+id/alarm_line4"
 		 android:layout_width="fill_parent"
		 android:layout_height="2dp"
		 android:background="#6a6a6a"
		 android:layout_marginTop="5dp"/>
	
	<!--铃声 -->
	<RelativeLayout
		android:id="@+id/alarm_ring"
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:padding="5dp"
	    android:layout_weight="1">
	    
	   <TextView 
	    android:id="@+id/alarm_ring_text"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_centerVertical="true"
	    android:text="选择铃声"
	    android:textSize="20sp"
        android:textColor="#6a6a6a"/>
	   
	  <TextView 
	    android:id="@+id/alarm_ring_chose"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:textSize="15sp"
	    android:text="铃声"
        android:textColor="#6a6a6a"/>
	   
	</RelativeLayout>
</LinearLayout>

