<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pop_add_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/down_background"
        android:orientation="vertical"
        android:padding="10dp" >
           <RelativeLayout 
            android:layout_weight="1"
            android:id="@+id/pop_add_back"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <ImageView 
                android:id="@+id/pop_add_back_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:background="@drawable/back"/>
            <TextView 
                android:id="@+id/pop_add_back_word"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/pop_add_back_img"
                android:layout_centerVertical="true"
                android:text="取消"
                android:textColor="#ffffff"
                android:textSize="20sp"/>
     	</RelativeLayout>
     	<View
	     		android:id="@+id/pop_add_line_last"
 		 		android:layout_width="120dp"
		 		android:layout_height="2dp"
		 		android:background="#70ffffff"
		 		android:layout_marginTop="10dp"/>
        <RelativeLayout 
            android:layout_weight="1"
            android:id="@+id/pop_add_list"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
 			android:layout_marginTop="5dp">
            <ImageView 
                android:id="@+id/pop_add_list_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:background="@drawable/list"/>
            <TextView 
                android:id="@+id/pop_add_list_word"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/pop_add_list_img"
                android:layout_centerVertical="true"
                android:text="查看列表"
                android:textColor="#ffffff"
                android:textSize="20sp"/>

     	</RelativeLayout>
         	<View
	     		android:id="@+id/pop_add_line"
 		 		android:layout_width="120dp"
		 		android:layout_height="2dp"
		 		android:background="#70ffffff"
		 		android:layout_marginTop="10dp"/>
        <RelativeLayout 
            android:layout_weight="1"
            android:id="@+id/pop_add_save"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
          	android:layout_marginTop="5dp">
            <ImageView 
                android:id="@+id/pop_add_save_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:background="@drawable/save"/>
            <TextView 
                android:id="@+id/pop_add_save_word"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/pop_add_save_img"
                android:layout_centerVertical="true"
                android:text="保存"
                android:textColor="#ffffff"
                android:textSize="20sp"/>
     	</RelativeLayout>


        
    </LinearLayout>

