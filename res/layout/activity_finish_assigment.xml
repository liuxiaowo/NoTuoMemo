<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/finish_assigment_count"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
   
    tools:context=".FinishAssigmentActivity" >

    <LinearLayout 
    android:id="@+id/reward_LinearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="horizontal">
    
    <Button
        android:id="@+id/finish_assigment_reward"
        android:background="#90FFFFFF"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:text="抽奖" />

    <Button
        android:id="@+id/finish_assigment_later"
        android:background="#90FFFFFF"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="下次再说" />
    </LinearLayout>

    <TextView
        android:id="@+id/finish_assigment_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/reward_LinearLayout"
        android:layout_marginTop="40dp"
        android:text="次数"
        android:textSize="15sp" />

</RelativeLayout>
